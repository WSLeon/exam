<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="com.mz.auth.mapper.StudentMapper">

    <sql id="whereSql">
        <where>
            <if test="username!=null and username !=''">
                and username like concat('%',#{username},'%')
            </if>
            <if test="email!=null and email !=''">
                and email like concat('%',#{email},'%')
            </if>
        </where>
    </sql>

    <select id="queryTotal" parameterType="studentQuery" resultType="java.lang.Long">
        select count(*) from t_student
        <include refid="whereSql"/>
    </select>
    <!--    分页的数据-->
    <select id="queryData" parameterType="studentQuery" resultMap="studentMap">
        select * from t_student
        <include refid="whereSql"/>
        limit #{offset},#{page}
    </select>
    <resultMap id="studentMap" type="Student">
        <id property="id" column="id" ></id>
        <result column="username" property="username"></result>
        <result column="password" property="password"></result>
        <result column="tel" property="tel"></result>
        <result column="email" property="email"></result>
        <result column="stuNum" property="stuNum"></result>
        <result column="nickName" property="nickName"></result>
    </resultMap>
</mapper>